<div class="col-md-12">
  <h2 class="text-center">我加入的討論版</h2>
  <table class="table">
    <thead>
      <tr>
        <th>#</th>
        <th>標題</th>
        <th>敘述</th>
        <th>文章數</th>
        <th>最後更新</th>
      </tr>
    </thead>

    <tbody>
        <% @groups.each do |group| %>
        <tr>
          <td>#</td>
          <td><%= link_to(group.title, group_path(group)) %></td>
          <td><%= render_group_description(group) %></td>
          <td><%= group.posts.count %></td>
          <td><%= group.updated_at %></td>
        </tr>
        <% end %>
    </tbody>
  </table>
</div>
