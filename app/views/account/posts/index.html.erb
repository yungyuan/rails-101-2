<div class="col-md-12">
  <h2 class="text-center">我發表過的文章</h2>

  <table class="table">
    <thead>
      <tr>
        <th>內容</th>
        <th>群組名稱</th>
        <th>最後更新</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.content %></td>
          <td><%= post.group.title %></td>
          <td><%= post.updated_at %></td>
          <td><%= link_to('編輯', edit_group_post_path(post.group, post), class: "btn btn-default btn-xs") %></td>
          <td><%= link_to('刪除', group_post_path(post.group, post), method: :delete, data: {confirm: "確定刪除?"}, class: "btn btn-default btn-xs") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
