<%= form_for @group do |f| %>

<div class="form-group">
  <div class="form-group string optional">
    <%= f.label "標題", :class => "string optional control-label" %>
    <%= f.text_field :title, :class => "string optional form-control form-control" %>
  </div>

  <div class="form-group string optional">
    <%= f.label "描述", :class => "string optional control-label" %>
    <%= f.text_area :description, :class => "string optional form-control" %>
  </div>

</div>
<%= f.submit "送出", class: "btn btn-primary", data: { disable_with: "正在送出..."} %>

<% end %>
