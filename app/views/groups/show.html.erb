<div class="col-md-12">
  <div class="group">

    <%= link_to("發表文章", new_group_post_path(@group), class: "btn btn-default pull-right") %>

    <% if current_user && current_user == @group.user %>
      <%= link_to("編輯", edit_group_path(@group), class: "btn btn-primary pull-right")%>
    <% end %>
  </div>
  <h2><%= @group.title %></h2>
  <p><%= @group.description %></p>
  <table class="table">
    <thead>
      <tr>
        <th>文章內容</th>
        <th>發表者</th>
        <th>發表時間</th>
      </tr>
    </thead>
    <tbody>
      <% @post.each do |post| %>
        <tr>
          <td><%= post.content %></td>
          <td><%= post.user.email %></td>
          <td><%= post.created_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
